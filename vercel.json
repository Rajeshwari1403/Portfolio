{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "portfolio/dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/download-resume", "dest": "/backend/server.js" },
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/portfolio/dist/$1" }
  ]
}
